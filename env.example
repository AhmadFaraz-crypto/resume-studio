# Firebase Configuration
# Copy this file to .env.local and fill in your actual Firebase config values

VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-app-id-here

# File Processing Configuration
VITE_MAX_FILE_SIZE=52428800  # 50MB
VITE_ALLOWED_FILE_TYPES=application/pdf

# Optional: Firebase Emulator URLs (for development)
# VITE_FIREBASE_USE_EMULATOR=true
# VITE_FIREBASE_AUTH_EMULATOR_URL=http://localhost:9099
# VITE_FIREBASE_FIRESTORE_EMULATOR_URL=http://localhost:8080
# VITE_FIREBASE_STORAGE_EMULATOR_URL=http://localhost:9199
